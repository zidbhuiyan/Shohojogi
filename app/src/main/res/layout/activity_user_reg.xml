<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8FF"
    tools:context=".userReg">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <TextView
                 android:id="@+id/ctv1"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Register as a"
                 android:layout_marginTop="5dp"
                 android:textAlignment="center"
                 android:textColor="#221044"
                 android:textSize="25dp"
                 android:textStyle="bold"/>
         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical">

             <TextView
                 android:id="@+id/textView3"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10sp"
                 android:layout_marginLeft="15sp"
                 android:layout_marginRight="15sp"
                 android:text="Full Name:"
                 android:textColor="#221044"
                 android:textSize="20dp"
                 android:textStyle="bold"/>
             <EditText
                 android:id="@+id/ct1"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="15sp"
                 android:layout_marginRight="15sp"
                 android:backgroundTint="#221044"
                 android:drawableLeft="@drawable/ic_baseline_person_24"
                 android:drawablePadding="5dp"
                 android:ems="10"
                 android:hint="Enter Name"
                 android:inputType="textPersonName"
                 android:textColor="#221044"
                 android:textSize="20dp"/>

         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical">
             <TextView
                 android:id="@+id/textView4"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10sp"
                 android:layout_marginLeft="15sp"
                 android:layout_marginRight="15sp"
                 android:text="Email:"
                 android:textColor="#221044"
                 android:textSize="20dp"
                 android:textStyle="bold" />

             <EditText
                 android:id="@+id/ct2"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="15sp"
                 android:layout_marginRight="15sp"
                 android:backgroundTint="#221044"
                 android:drawableLeft="@drawable/ic_baseline_email_24"
                 android:drawablePadding="5dp"
                 android:ems="10"
                 android:hint="Enter Email"
                 android:inputType="textEmailAddress"
                 android:textColor="#221044"
                 android:textSize="20dp"/>

         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical">
             <TextView
                 android:id="@+id/textView5"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10sp"
                 android:layout_marginLeft="15sp"
                 android:layout_marginRight="15sp"
                 android:text="Date of Birth:"
                 android:textColor="#221044"
                 android:textSize="20dp"
                 android:textStyle="bold"/>

             <EditText
                 android:id="@+id/ct3"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="15sp"
                 android:backgroundTint="#221044"
                 android:cursorVisible="false"
                 android:drawableLeft="@drawable/ic_baseline_date_range_24"
                 android:drawablePadding="5dp"
                 android:ems="10"
                 android:focusable="false"
                 android:hint="tap to select date.."
                 android:inputType="date"
                 android:textColor="#221044"
                 android:textSize="20dp" />
         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical">
             <TextView
                 android:id="@+id/textView8"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10sp"
                 android:layout_marginLeft="15sp"
                 android:layout_marginRight="15sp"
                 android:text="Gender:"
                 android:textColor="#221044"
                 android:textSize="20dp"
                 android:textStyle="bold" />

             <Spinner
                 android:id="@+id/spinner"
                 android:layout_width="wrap_content"
                 android:layout_height="50dp"
                 android:layout_marginLeft="15dp"
                 android:textSize="20dp" />
         </LinearLayout>

         <LinearLayout
             android:id="@+id/skill_l"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:visibility="visible">
             <TextView
                 android:id="@+id/sk"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10sp"
                 android:layout_marginLeft="15sp"
                 android:layout_marginRight="15sp"
                 android:text="Select you skills:"
                 android:textColor="#221044"
                 android:textSize="20dp"
                 android:textStyle="bold"/>

             <androidx.cardview.widget.CardView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10sp"
                 android:layout_marginRight="10sp"
                 android:layout_marginLeft="10sp">

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:background="#D3D3D3"
                     android:orientation="horizontal">

                     <ImageView
                         android:layout_width="30dp"
                         android:layout_height="30dp"
                         android:src="@drawable/household"
                         android:padding="5sp"/>

                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:text="Cleaning."
                         android:textColor="#221044"
                         android:textSize="15dp"
                         android:textStyle="bold"
                         android:layout_gravity="center"
                         android:padding="5dp"/>

                 </LinearLayout>

             </androidx.cardview.widget.CardView>

             <GridLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="10dp"
                 android:layout_marginTop="10dp"
                 android:layout_marginRight="10dp"
                 android:columnCount="4"
                 android:rowCount="3">

                 <CheckBox
                     android:id="@+id/bathroom_cb"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:textSize="14dp"
                     android:layout_rowWeight="1"
                     android:layout_columnWeight="1"
                     android:layout_gravity="fill"
                     android:layout_margin="5sp"
                     android:text="Bathroom"
                     app:cardCornerRadius="20sp" />

                 <CheckBox
                     android:id="@+id/floor_cb"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:textSize="14dp"
                     android:layout_rowWeight="1"
                     android:layout_columnWeight="1"
                     android:layout_gravity="fill"
                     android:layout_margin="5sp"
                     android:text="Floor"
                     app:cardCornerRadius="20sp" />

                 <CheckBox
                     android:id="@+id/furniture_cb"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:textSize="14dp"
                     android:layout_rowWeight="1"
                     android:layout_columnWeight="1"
                     android:layout_gravity="fill"
                     android:layout_margin="5sp"
                     android:text="Furniture"
                     app:cardCornerRadius="20sp" />

                 <CheckBox
                     android:id="@+id/car_cb"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:textSize="14dp"
                     android:layout_rowWeight="1"
                     android:layout_columnWeight="1"
                     android:layout_gravity="fill"
                     android:layout_margin="5sp"
                     android:text="Car"
                     app:cardCornerRadius="20sp" />

                 <CheckBox
                     android:id="@+id/ac_cb"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textSize="14dp"
                     android:layout_rowWeight="1"
                     android:layout_columnWeight="1"
                     android:layout_gravity="fill"
                     android:layout_margin="5sp"
                     android:text="AC"
                     app:cardCornerRadius="20sp" />

                 <CheckBox
                     android:id="@+id/fridge_cb"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_rowWeight="1"
                     android:textSize="14dp"
                     android:layout_columnWeight="1"
                     android:layout_gravity="fill"
                     android:layout_margin="5sp"
                     android:text="Fridge"
                     app:cardCornerRadius="20sp" />

                 <CheckBox
                     android:id="@+id/kitchen_cb"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textSize="14dp"
                     android:layout_rowWeight="1"
                     android:layout_columnWeight="1"
                     android:layout_gravity="fill"
                     android:layout_margin="5sp"
                     android:text="Kitchen"
                     app:cardCornerRadius="20sp" />
             </GridLayout>

             <androidx.cardview.widget.CardView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10sp"
                 android:layout_marginRight="10sp"
                 android:layout_marginLeft="10sp">

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:background="#D3D3D3"
                     android:orientation="horizontal">

                     <ImageView
                         android:layout_width="30dp"
                         android:layout_height="30dp"
                         android:src="@drawable/washing_machine"
                         android:padding="5dp"/>

                     <TextView
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:text="Laundry."
                         android:textColor="#221044"
                         android:textSize="15dp"
                         android:textStyle="bold"
                         android:layout_gravity="center"
                         android:padding="5dp"/>
                 </LinearLayout>
             </androidx.cardview.widget.CardView>

             <GridLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:layout_marginRight="10dp"
                 android:layout_marginLeft="10dp"
                 android:columnCount="4"
                 android:rowCount="3">

                 <CheckBox
                     android:id="@+id/clothes_cb"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textSize="14dp"
                     android:text="Clothes"
                     android:layout_gravity="fill"
                     android:layout_rowWeight="1"
                     android:layout_columnWeight="1"
                     app:cardCornerRadius="20sp"
                     android:layout_margin="5sp"/>

                 <CheckBox
                     android:id="@+id/iron_cb"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textSize="14dp"
                     android:text="Iron"
                     android:layout_gravity="fill"
                     android:layout_rowWeight="1"
                     android:layout_columnWeight="1"
                     app:cardCornerRadius="20sp"
                     android:layout_margin="5sp"/>
                 <CheckBox
                     android:id="@+id/curtains_cb"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textSize="14dp"
                     android:text="Curtains"
                     android:layout_gravity="fill"
                     android:layout_rowWeight="1"
                     android:layout_columnWeight="1"
                     app:cardCornerRadius="20sp"
                     android:layout_margin="5sp"/>
                 <CheckBox
                     android:id="@+id/carpet_cb"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textSize="14dp"
                     android:text="Carpet"
                     android:layout_gravity="fill"
                     android:layout_rowWeight="1"
                     android:layout_columnWeight="1"
                     app:cardCornerRadius="20sp"
                     android:layout_margin="5sp"/>
             </GridLayout>

         </LinearLayout>


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical">
             <ProgressBar
                 android:id="@+id/pb2"
                 android:layout_marginTop="20sp"
                 style="?android:attr/progressBarStyleSmall"
                 android:visibility="gone"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" />
             <Button
                 android:id="@+id/cb1"
                 android:layout_width="250dp"
                 android:layout_height="50dp"
                 android:layout_marginTop="20dp"
                 android:layout_gravity="center"
                 android:background="#221044"
                 android:text="Confirm"
                 android:textColor="@color/white"
                 android:textSize="20dp"
                 android:visibility="gone"/>
             <Button
                 android:id="@+id/cb2"
                 android:layout_width="200dp"
                 android:layout_height="50dp"
                 android:layout_marginTop="20dp"
                 android:layout_gravity="center"
                 android:background="#221044"
                 android:text="Register"
                 android:textColor="@color/white"
                 android:textSize="20dp"
                 android:visibility="visible"/>
         </LinearLayout>

     </LinearLayout>


</ScrollView>